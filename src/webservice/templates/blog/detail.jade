          //-     li: a(href="#") Nojde Express Framework with MVC
          //-     li: a(href="#") Ruby on Rails Framework with MVC
          .impressed-users
            h5 Impressed users:
            p 20 users thought this blog is impressed!
            img.img-circle.impressed-user(src="/api/1.0/base/filesystem/avatar/2", width="50px", height="50px")
            img.img-circle.impressed-user(src="/api/1.0/base/filesystem/avatar/3", width="50px", height="50px")
            img.img-circle.impressed-user(src="/api/1.0/base/filesystem/avatar/316", width="50px", height="50px")
            img.img-circle.impressed-user(src="/api/1.0/base/filesystem/avatar/5", width="50px", height="50px")
            a#btn-praise.btn.btn-primary.btn-md.btn-block(type="button", width="100%", href="javascript:void(0)", data-bid='{{ blog.bid }}') Praise
